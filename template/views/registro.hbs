{{>header}}
<h3>Registro</h3>

 <form action="/registrarse" method="POST">
        <div class="form-group">
            <label for="id">documento de identidad</label>
            <input required type="number" class="form-control" id="id" name='id' placeholder="1234">
        </div>
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input required type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input required type="email" class="form-control" id="email" name="email" placeholder="example@mail.com">
        </div>
        <div class="form-group">
            <label for="telefono">Telefono</label>
            <input required type="tel" class="form-control" id="telefono" name="telefono" placeholder="0000">
        </div>
         <div class="form-group">
            <label for="usuario">Usuario</label>
            <input required type="text" class="form-control" id="usuario" name="usuario" placeholder="Usuario">
        </div>
         <div class="form-group">
            <label for="contrasena">Contraseña</label>
            <input required type="password" class="form-control" id="contrasena" name="contrasena" placeholder="Contraseña">
        </div>
          {{{roles}}}
        <button>Registrarse</button>
    </form>
{{>footer}}